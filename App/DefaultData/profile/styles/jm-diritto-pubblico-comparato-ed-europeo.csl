  <macro name="jurism">
    <choose>
      <if position="ibid-with-locator">
        <group delimiter=" ">
          <text term="ibid" text-case="lowercase"/>
          <group delimiter=" ">
            <text value="at"/>
            <group require="empty-label">
              <text macro="juris-locator" label-form="short"/>
            </group>
          </group>
          <group delimiter=" " reject="empty-label">
            <text macro="juris-locator" label-form="short"/>
          </group>
        </group>
      </if>
      <else-if position="ibid">
        <text term="ibid" text-case="lowercase"/>
      </else-if>
      <else-if position="subsequent" match="any">
        <!-- short form -->
        <group delimiter=" ">
          <choose>
            <if type="legislation regulation" match="none">
              <choose>
                <if variable="hereinafter">
                  <text variable="hereinafter" font-style="italic"/>
                </if>
                <else>
                  <text macro="juris-title-short" font-style="italic"/>
                </else>
              </choose>
            </if>
          </choose>
          <group delimiter=", ">
            <choose>
              <if type="legislation regulation" match="any">
                <choose>
                  <if variable="hereinafter">
                    <text variable="hereinafter" font-style="italic"/>
                  </if>
                  <else>
                    <text macro="juris-title-short"/>
                  </else>
                </choose>
              </if>
            </choose>
            <group delimiter=" ">
              <choose>
                <if type="legislation regulation" match="none">
                  <text variable="first-reference-note-number" prefix="(n " suffix=")"/>
                </if>
              </choose>
              <text macro="juris-locator" label-form="short"/>
            </group>
          </group>
        </group>
      </else-if>
      <else>
        <!-- full form -->
        <group delimiter=" ">
        <group delimiter=", ">
          <group delimiter=" ">
            <text macro="juris-pretitle"/>
            <group delimiter=" ">
              <!-- join with comma in Indigo -->
              <choose>
                <if type="legislation regulation" match="any">
                  <text macro="juris-title"/>
                </if>
                <else>
                  <text macro="juris-title" font-style="italic"/>
                </else>
              </choose>
              <group delimiter=" ">
                <group delimiter=", ">
                  <choose>
                    <if>
                      <conditions match="all">
                        <condition match="all" type="report"/>
                        <condition match="none" variable="title committee"/>
                      </conditions>
                      <text macro="juris-main" font-style="italic"/>
                    </if>
                    <else-if>
                      <conditions match="all">
                        <condition match="all" type="hearing"/>
                        <condition match="none" variable="committee"/>
                      </conditions>
                      <text macro="juris-main" font-style="italic"/>
                    </else-if>
                    <else>
                      <text macro="juris-main"/>
                    </else>
                  </choose>
                  <group delimiter=" " require="empty-label">
                    <text value="at"/>
                    <text macro="juris-locator" label-form="short"/>
                  </group>
                  <group require="comma-safe">
                    <text macro="juris-locator" label-form="short"/>
                  </group>
                </group>
              </group>
            </group>
            <group reject="comma-safe">
              <text macro="juris-locator" label-form="short"/>
            </group>
            <choose>
              <if type="legislation" variable="container-title page volume gazette-flag" match="all"/>
              <else>
                <text macro="juris-tail"/>
              </else>
            </choose>
          </group>
          <choose>
            <if type="legislation" variable="container-title page volume gazette-flag" match="all">
              <text macro="juris-tail"/>
            </if>
          </choose>
        </group>
        <text variable="hereinafter" prefix="(" suffix=")"/>
        </group>
      </else>
    </choose>
  </macro>
  <macro name="dpce-secondary-first">
    <group delimiter=" ">
    <group delimiter=", ">
      <names variable="author">
        <name/>
      </names>
      <text variable="title" font-style="italic"/>
      <group delimiter=" ">
        <choose>
          <if variable="container-title">
            <text term="in"/>
          </if>
        </choose>
        <choose>
          <if type="article-journal">
            <group delimiter=" ">
              <number variable="volume"/>
              <text variable="container-title" font-style="italic"/>
              <number variable="page"/>
            </group>
          </if>
          <else>
            <group delimiter=", ">
              <names variable="editor translator">
                <name/>
                <label form="short" text-case="capitalize-first" prefix=" (" suffix=")"/>
              </names>
              <text variable="container-title" font-style="italic"/>
              <text variable="publisher-place" form="short"/>
              <group delimiter=" ">
                <number variable="edition" form="ordinal"/>
                <label variable="edition"/>
              </group>
              <date variable="issued" form="text" date-parts="year"/>
            </group>
          </else>
        </choose>
      </group>
      <number variable="locator"/>
    </group>
      <choose>
        <if type="article-journal">
          <date variable="issued" form="text" date-parts="year" prefix="(" suffix=")"/>
        </if>
      </choose>
    </group>
  </macro>
  <macro name="locator-subsequent">
    <group delimiter=" ">
      <text value="at"/>
      <group require="empty-label">
        <text macro="locator"/>
      </group>
    </group>
    <text macro="locator"/>
  </macro>
  <macro name="dpce-secondary-subsequent">
    <group delimiter=", ">
      <names variable="author">
        <name/>
      </names>
      <text variable="title" font-style="italic"/>
      <group delimiter=" ">
        <text value="supra" font-style="italic"/>
        <text term="note"/>
        <text variable="first-reference-note-number"/>
        <text macro="locator-subsequent"/>
      </group>
    </group>
  </macro>
  <macro name="locator">
    <group delimiter=" ">
      <choose>
        <if locator="page"/>
        <else>
          <label variable="locator"/>
        </else>
      </choose>
      <number variable="locator"/>
    </group>
  </macro>
  <citation and="text" et-al-min="3" et-al-use-first="1" initialize="true" initialize-with="." name-delimiter=", " names-delimiter=", ">
    <layout delimiter="; " suffix=".">
      <choose>
        <if>
          <conditions match="all">
            <condition match="any" type="legal_case legislation bill hearing report regulation"/>
            <condition match="all" variable="jurisdiction"/>
